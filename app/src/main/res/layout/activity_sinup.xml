<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="119dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/skp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Sinup Here"
        android:textColor="#042AFC"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/edit_email_sinup"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:drawableLeft="@drawable/ic_baseline_mail_24"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_back_ground"
        android:hint="Email"
        android:padding="5dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/password_sinup"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Password"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_back_ground"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:ems="10"
       android:inputType="textPassword"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_email_sinup"
        app:layout_constraintStart_toStartOf="@+id/edit_email_sinup"
        app:layout_constraintTop_toBottomOf="@+id/edit_email_sinup" />

    <EditText
        android:id="@+id/confirmpass_sin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_back_ground"
        android:padding="5dp"
        android:hint="Confirm Password"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/password_sinup"
        app:layout_constraintStart_toStartOf="@+id/password_sinup"
        app:layout_constraintTop_toBottomOf="@+id/password_sinup" />

    <Button
        android:id="@+id/sinup_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/confirmpass_sin"
        app:layout_constraintStart_toStartOf="@+id/confirmpass_sin"
        app:layout_constraintTop_toBottomOf="@+id/confirmpass_sin" />

    <TextView
        android:id="@+id/login_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Already Have Account? Login"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/sinup_btn"
        app:layout_constraintStart_toStartOf="@+id/sinup_btn"
        app:layout_constraintTop_toBottomOf="@+id/sinup_btn" />

    <ProgressBar
        android:id="@+id/progrss_sinup"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_act" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/firebase" />
</androidx.constraintlayout.widget.ConstraintLayout>